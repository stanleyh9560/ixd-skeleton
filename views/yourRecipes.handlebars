<html>
  <head>
  	<title>Your Recipes</title>
    <meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
  	<link href="/css/bootstrap.css" rel="stylesheet">
  	<link href="/css/bootstrap-theme.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery.js"></script>
  	<script src="/js/bootstrap.js"></script>
    <script src="/js/updateInput.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-static-top">
        <a type="button" class="btn pull-left" href="/">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
      <div class="navbar-brand"><h3>Your recipe</h3></div>
      <div class="pull-right">
        <a tabindex="0" class="btn" role="button" data-toggle="popover" data-placement="bottom" data-trigger="focus" data-content="This is where your recipe is displayed">
            <span class="glyphicon glyphicon-question-sign"></span>
        </a>
      </div>
    </nav>

    <div class="hero">
      <div class="btn-box">
          <button id="btn1" onclick="openSaved()">Saved</button>
          <button id="btn2" onclick="openCreated()">Created</button>
      </div>
      <div id="content1" class="content">
        <img src="https://www.thespruceeats.com/thmb/AAnECK7pIP9DrvVOFlM2CRRndWM=/4048x2696/filters:fill(auto,1)/vegetarian-bean-and-rice-burrito-recipe-3378550-hero-01-40ecbc08fcc84e80b8be853c1b779a13.jpg">
      </div>
      <div id="content2" class="content">
        <img src="https://www.simplyrecipes.com/thmb/hW5yl6EWS3ypqmQ515Xq1Z2N2Iw=/1200x800/filters:fill(auto,1)/__opt__aboutcom__coeus__resources__content_migration__simply_recipes__uploads__2007__01__homemade-pizza-horiz-a-1200-4d93aa914b09468ab2bc4e2e7070e2db.jpg">
      </div>
    </div>


    <div class="footer navbar navbar-default navbar-fixed-bottom text-center">
      <a type="button" class="btn btn-lg" href="/">
          <span class="glyphicon glyphicon-home"></span>
      </a>
    </div>

    <script>
      var content1 = document.getElementById("content1");
      var content2 = document.getElementById("content2");
      var btn1 = document.getElementById("btn1");
      var btn2 = document.getElementById("btn2");

      function openSaved(){
        content1.style.display = "initial";
        content2.style.display = "none";
        btn1.style.color = "#ff7846";
        btn2.style.color = "#000";
      }
      function openCreated(){
        content1.style.display = "none";
        content2.style.display = "initial";
        btn1.style.color = "#000";
        btn2.style.color = "#ff7846";
      }
    </script>

  </body>

</html>
