<html>
  <head>
  	<title>Create Recipe</title>
    <meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  	<link href="/css/bootstrap.css" rel="stylesheet">
  	<link href="/css/bootstrap-theme.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery.js"></script>
  	<script src="/js/bootstrap.js"></script>
    <script src="/js/updateInput.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-static-top">
        <button type="button" class="btn pull-left">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </button>
      <div class="navbar-brand"><h3>Create a recipe</h3></div>
      <div class="pull-right">
        <button class="btn">
            <span class="glyphicon glyphicon-question-sign"></span>
          </button>
      </div>
    </nav>

    <div class="container">
      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Name of your recipe">
      </div>

      <div class="form-group">
        <label>Ingredients</label>
        <div id="inputFormRow">
            <input type="text" class="form-control" style="margin-bottom: 15px" placeholder="Enter measurement and ingredient">
        </div>
        <div id="newIng"></div>
        <div class="col text-left">
          <button id="addIng" type="button" class="btn btn-default">Add ingredient</button>
        </div>
      </div>

      <div class="form-group">
        <label>Instructions</label>
        <div id="inputFormRow2">
          <div class="input-group">
            <span id="quantity" class="input-group-addon" data-value="1">1</span>
            <input type="text" class="form-control" placeholder="Enter instruction">
          </div>
        </div>
        <div id="newInstr"></div>
        <div class="col text-left">
          <button id="addInstr" type="button" class="btn btn-default">Add step</button>
        </div>
      </div>


        <div class="col text-right" style="margin-top: 30px">
          <button class="btn btn-lg btn-primary">Publish</button>
        </div>

    </div>
  </body>

</html>
